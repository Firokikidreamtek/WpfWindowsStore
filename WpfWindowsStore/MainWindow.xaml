<mah:MetroWindow x:Class="WpfWindowsStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWindowsStore"
        xmlns:uc="clr-namespace:WpfWindowsStore.UserControllers"
        xmlns:HamburgerMenuViews="clr-namespace:WpfWindowsStore.UserControllers.HamburgerMenuViews"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Frame Name="MainWindowFrame" 
               Loaded="MainWindowFrame_Loaded"
               NavigationUIVisibility="Hidden"
               Width="{Binding ElementName=MetroWindow, Path=ActualWidth}"
               Height="{Binding ElementName=MetroWindow, Path=ActualHeight}"
               Visibility="Visible"
        />
    </Grid>
</mah:MetroWindow>
