<UserControl x:Class="WpfWindowsStore.UserControllers.AppDetailsTabContent.Reviews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfWindowsStore.UserControllers.AppDetailsTabContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="ReviewsUserControl"
             >
    <StackPanel                 
        Width="{Binding ElementName=ReviewsUserControl, Path=ActualWidth}"
        Loaded="StackPanel_Loaded"
        Background="#2E2E2E"
    />
</UserControl>
